.workspace-area
    .workspace-header
        .page-header.d-print-none
            .row.align-items-center
                .col-auto
                    span.status-indicator.status-indicator-animated.status-primary
                        span.status-indicator-circle
                        span.status-indicator-circle
                        span.status-indicator-circle
                .col
                    h2.page-title Packages
                    .text-muted
                        ul.list-inline.list-inline-dots.mb-0
                            li.list-inline-item Installed python packages

                .col-auto
                    .actions
                        input.form-control.mr-1(placeholder="scikit-learn" ng-model="packages" ng-enter="pip.install(packages)" ng-disabled="pip.install_status")
                        .btn.btn-primary(ng-click="pip.install(packages)")
                            span(ng-if="!pip.install_status") Install
                            span.spinner-border.spinner-border-sm.text-white(ng-if="pip.install_status")

    .workspace-container
        .container.pt-4(style="max-width: 860px;")
            .row.packages
                .col-md-4.text-left(ng-repeat="item in pip.data")
                    b {{item.name}}
                    span {{"=" + item.version}}
        
            .search-loading.text-center(style="padding: 10vh 0;" ng-if="!pip.data")
                .spinner-grow.text-azure(style="width: 120px; height: 120px;")
    
    .workspace-footer

    #offcanvas-result.offcanvas.offcanvas-end(tabindex="-1" style="z-index: 1090;")
        .offcanvas-header
            h3.p-0.m-0 Output
            .close(type="button" data-bs-dismiss="offcanvas" aria-label="Close")
                i.fa-solid.fa-xmark
        
        .offcanvas-body.p-0
            pre {{pip.install_message}}
            