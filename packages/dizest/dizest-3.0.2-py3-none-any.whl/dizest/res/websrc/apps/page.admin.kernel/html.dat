.workspace-area
    .workspace-header
        .page-header.d-print-none
            .row.align-items-center
                .col-auto
                    span.status-indicator.status-indicator-animated.status-primary
                        span.status-indicator-circle
                        span.status-indicator-circle
                        span.status-indicator-circle
                .col
                    h2.page-title Kernels
                    .text-muted
                        ul.list-inline.list-inline-dots.mb-0
                            li.list-inline-item Running workflow kernels.

                .col-auto
                    .actions
                        .btn.btn-primary(ng-click="kernel.stop()")
                            i.fa-solid.fa-stop.mr-2
                            span Stop All

    .workspace-container
        .container.pt-4(style="max-width: 860px;")
            .overflow-x
                table.table.table-hover.board-table.table-vcenter
                    thead
                        tr
                            th.text-center.w-1(style="width: 52px;")
                            th.text-center Workspace
                            th.text-center.width-2 USER
                            th.text-center.width-2 Created
                            th.text-center.w-1

                    tbody
                        tr(ng-repeat="item in kernel.data")
                            td.w-1(style="width: 52px;")
                                .avatar-area.avatar-area-sm.mr-3
                                        .avatar-container
                                            span.avatar(style="background-image: url({{item.logo}})")
                            td.text-left
                                span(style="font-weight: 1000;") {{item.title}}
                                span.text-muted.ml-1 ({{item.id}})
                            td.width-2 {{item.user_id}}
                            td.width-2 {{item.created}}
                            td.w-1
                                .btn.btn-primary(ng-click="kernel.stop(item.id)")
                                    i.fa-solid.fa-stop
        
            .search-loading.text-center(style="padding: 10vh 0;" ng-if="!kernel.data")
                .spinner-grow.text-azure(style="width: 120px; height: 120px;")
    
    .workspace-footer